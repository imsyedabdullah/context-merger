{
	"name": "context-merger",
	"displayName": "Context Merger",
	"publisher": "SyedAbdullah",
	"description": "Merge multiple files and folders into a single, structured text file for LLMs, code reviews, or documentation.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "contextMerger.mergeSelection",
				"title": "Merge into Single File"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "contextMerger.mergeSelection",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"check-types": "tsc --noEmit",
		"lint": "eslint src"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/context-merger"
	},
	"devDependencies": {
		"@types/vscode": "^1.36.0",
		"@types/node": "22.x",
		"typescript-eslint": "^8.54.0",
		"eslint": "^9.39.2",
		"esbuild": "^0.27.2",
		"typescript": "^5.9.3"
	}
}